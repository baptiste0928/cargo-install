{
  "name": "cargo-install",
  "version": "3.0.0",
  "description": "GitHub action for cache-efficient Rust crates installation",
  "author": "baptiste0928",
  "license": "ISC",
  "scripts": {
    "check": "tsc",
    "lint": "eslint src",
    "format": "prettier . !pnpm-lock.yaml !dist --write",
    "format:check": "prettier . !pnpm-lock.yaml !dist --check",
    "package": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js"
  },
  "dependencies": {
    "@actions/cache": "^3.2.4",
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/http-client": "^2.2.1",
    "@actions/io": "^1.1.3",
    "chalk": "^5.3.0",
    "semver": "^7.6.0",
    "string-argv": "^0.3.2",
    "valibot": "^0.30.0"
  },
  "devDependencies": {
    "@types/semver": "^7.5.8",
    "esbuild": "^0.20.1",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2",
    "typescript-eslint": "^7.1.1"
  },
  "prettier": {
    "arrowParens": "avoid",
    "singleQuote": true
  }
}
